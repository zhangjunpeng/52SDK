<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="#DDDDDD"
        android:gravity="center_vertical"
        android:dividerPadding="1dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="绑定手机号"
            android:textColor="#F5946E"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>

        <Button
            android:id="@+id/back_frag_bindphone"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="#F5946E"
            android:gravity="center"
            android:text="@string/goback"
            android:textColor="#FFF" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        > 
        
          <EditText 
              android:id="@+id/edit_phonenum_bindphone"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:layout_margin="10dp"
              android:background="@null"
              android:hint="请输入手机号"
              />     
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        >
          <EditText 
              android:id="@+id/edit_proving_bindphone"
              android:layout_width="0dp" 
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:background="@null"
             android:hint="请输入验证码"
              />  
           <Button
            android:id="@+id/button_getproving_bindphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.4"
            android:layout_marginLeft="10dp"
            android:background="@drawable/getproving_selector"
            android:text="@string/getproving"
            android:textSize="14sp" />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        >        
        <Button 
            android:id="@+id/button_bind_bindphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5946E"
            android:text="绑定"
            android:textColor="#FFF"
            />
    </LinearLayout>
    
</LinearLayout>
