<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#DDDDDD"
        android:dividerPadding="1dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="修改密码"
            android:textColor="#F5946E"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </LinearLayout>

        <Button
            android:id="@+id/back_frag_change"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="#F5946E"
            android:gravity="center"
            android:text="@string/goback"
            android:textColor="#FFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#DDDDDD"
        android:orientation="horizontal" >
        <TextView 
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="旧密码："
            />
        <EditText 
            android:id="@+id/edit_oldpwd_change"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:hint="请输入旧密码"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#DDDDDD"
        android:orientation="horizontal" >
        <TextView 
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="新密码："
            />
        <EditText 
            android:id="@+id/edit_newpwd_change"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:hint="请输入新密码"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#DDDDDD"
        android:orientation="horizontal" >
        <TextView 
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="确认新密码："
            />
        <EditText 
            android:id="@+id/edit_confirmpwd_change"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:hint="请确认新密码"
            />
    </LinearLayout>

    <Button
        android:id="@+id/submit_changepwd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="#408ED6"
        android:orientation="horizontal"
        android:text="提交"
        android:textColor="#FFF" >
    </Button>

</LinearLayout>